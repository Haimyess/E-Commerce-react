CREATE TABLE orders 
 (
 	orderId SERIAL PRIMARY KEY ,
 	firstName VARCHAR(255) , 
	lastName VARCHAR(255), 
	email VARCHAR(255) , 
	phone VARCHAR(255) , 
	address VARCHAR(255) , 
	cardNumber VARCHAR(255) , 
	expMonth VARCHAR(255) , 
	expYear VARCHAR(255) , 
	cvv VARCHAR(255) 
-- 	dateOfPurchase DATE 

 );
 

 
 SELECT * FROM orders;